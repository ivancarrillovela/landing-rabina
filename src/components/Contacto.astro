---
// src/components/Contacto.astro
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../keystatic.config';

const reader = createReader(process.cwd(), keystaticConfig);
const data = await reader.singletons.contacto.read();

// Valores por defecto
const etiqueta = data?.etiqueta || "Hablemos";
const titulo = data?.titulo || "¿Quieres colaborar con el proyecto?";
const descripcion = data?.descripcion || "Buscamos socios, inversores y voluntarios que crean en el potencial humano de África tanto como nosotros.";
const textoBoton = data?.textoBoton || "Enviar Mensaje";
---

<section id="contacto" class="bg-zinc-50 py-24">
  <div class="container mx-auto px-6 lg:px-12">
    
    <div class="max-w-2xl mx-auto text-center mb-16">
      <h2 class="text-terracotta-500 font-bold tracking-widest uppercase text-sm mb-2">{etiqueta}</h2>
      <h3 class="text-4xl font-bold text-zinc-900 mb-4">{titulo}</h3>
      <p class="text-zinc-500">
        {descripcion}
      </p>
    </div>

    <div class="max-w-xl mx-auto bg-white p-8 md:p-12 shadow-xl border-t-4 border-terracotta-500">
      <form action="https://formspree.io/f/TU_ID_AQUI" method="POST" class="space-y-6">
        
        <div>
          <label for="nombre" class="block text-sm font-medium text-zinc-700 mb-1">Nombre completo</label>
          <input type="text" name="nombre" id="nombre" required 
            class="w-full px-4 py-3 bg-zinc-50 border border-zinc-200 focus:border-terracotta-500 focus:ring-1 focus:ring-terracotta-500 outline-none transition-colors"
            placeholder="Tu nombre">
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-zinc-700 mb-1">Correo electrónico</label>
          <input type="email" name="email" id="email" required 
            class="w-full px-4 py-3 bg-zinc-50 border border-zinc-200 focus:border-terracotta-500 focus:ring-1 focus:ring-terracotta-500 outline-none transition-colors"
            placeholder="tu@email.com">
        </div>

        <div>
          <label for="mensaje" class="block text-sm font-medium text-zinc-700 mb-1">Mensaje</label>
          <textarea name="mensaje" id="mensaje" rows="4" required 
            class="w-full px-4 py-3 bg-zinc-50 border border-zinc-200 focus:border-terracotta-500 focus:ring-1 focus:ring-terracotta-500 outline-none transition-colors"
            placeholder="¿Cómo te gustaría ayudar?"></textarea>
        </div>

        <button type="submit" class="w-full bg-zinc-900 text-white font-bold py-4 hover:bg-terracotta-500 transition-colors duration-300">
          {textoBoton}
        </button>
        
        <p class="text-xs text-center text-zinc-400 mt-4">
          Al enviar este formulario aceptas nuestra política de privacidad.
        </p>
      </form>
    </div>

  </div>
</section>